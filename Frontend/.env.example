# Frontend port for the development server
VITE_FRONTEND_BASE_PORT=3000

# API base URL for backend communication (use full URL for local development, relative path for production)
VITE_API_BASE_URL=http://localhost:5000/api

# Optional: Allowed hosts for the development server (comma-separated list)
# VITE_ALLOWED_HOSTS=localhost,127.0.0.1

# Optional: Proxy target for API requests in development (used by Vite config)
# VITE_PROXY_TARGET=http://localhost:5000